//Задача 68: Напишите программу вычисления функции Аккермана с помощью рекурсии.
 //Даны два неотрицательных числа m и n.
//m = 2, n = 3 -> A(m,n) = 9
//m = 3, n = 2 -> A(m,n) = 29

int m = входные числа("Введите M: ");
int n = входные числа("Введите N: ");

int functionAkkerman = Ack(m, n);

Консоль.Write($"Функция Аккермана = {functionAkkerman} ");

int Ack (int m, int n)
{
 if (m == 0) возвращает n + 1;
 else if (n == 0) возвращает Ack(m - 1, 1);
 else возвращает подтверждение (m - 1, Ack(m, n - 1));
}

